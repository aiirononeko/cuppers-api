// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String
  published Boolean @default(false)
}

model Coffee {
  id         Int    @default(autoincrement()) @id
  name       String
  country    String
  elevation  Int
  process    String
  variety    String
  roaster    String
  acidity    Int
  sweetness  Int
  aftertaste Int
  cleancup   Int
  balance    Int
  flavor     Int
  flavorText String
  mousefeel  Int
  overall    Int
  score      Int
  comment    String
  favorite   Boolean @default(false)
}
